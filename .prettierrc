{
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "ignore",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "html",
          "printWidth": 120,
          "tabWidth": 4
        }
      }
    ]
  }
  